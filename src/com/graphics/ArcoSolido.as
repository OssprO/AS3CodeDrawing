package com.graphics{		import flash.display.Sprite;	import flash.geom.Point;		public class ArcoSolido extends Sprite{				private var _color:uint;		private var _puntoDeOrigen:Point;		private var	_grosorDeArco:Number;		private var _radio:Number;		private var _gradosDeInicio:Number;		private var _amplitudDeArco:Number;				public function ArcoSolido(puntoDeOrigen:Point=null, grosorDeArco:Number=10, radio:Number=100, gradosDeInicio:Number=0, amplitudDeArco:Number=270, color:uint=0xFFFFFF) {						if(puntoDeOrigen)				_puntoDeOrigen = puntoDeOrigen;			else				_puntoDeOrigen = new Point(0,0);						_grosorDeArco = grosorDeArco;			_radio = radio;			_gradosDeInicio = gradosDeInicio;			_amplitudDeArco = amplitudDeArco;			_color = color;						init();		}				public function init():void{							var steps:Number = 1000;				var dosPI:Number = 2 * Math.PI;				var angulo_inicio:Number = _gradosDeInicio/360;							var angleStep:Number = (_amplitudDeArco/360) / steps;							var angle:Number,endAngle:Number = new Number(0);				var xx:Number = _puntoDeOrigen.x + Math.cos(angulo_inicio * dosPI) * (_radio-_grosorDeArco);				var yy:Number = _puntoDeOrigen.y + Math.sin(angulo_inicio * dosPI) * (_radio-_grosorDeArco);				var startPoint:Point = new Point(xx,yy);				this.graphics.clear();				this.graphics.beginFill(_color,1);				this.graphics.moveTo(startPoint.x, startPoint.y);								for (var i:int = 1; i<=steps; i++)				{					angle = (angulo_inicio + i * angleStep) * dosPI;					xx = _puntoDeOrigen.x + Math.cos(angle) * (_radio-_grosorDeArco);					yy = _puntoDeOrigen.y + Math.sin(angle) * (_radio-_grosorDeArco);					this.graphics.lineTo(xx, yy);				}				endAngle = angulo_inicio + (_amplitudDeArco/360);				angle = 0;								for (var j:int=0; j<=steps; j++)				{					angle = (endAngle - j * angleStep) * dosPI;					xx = _puntoDeOrigen.x + Math.cos(angle) * _radio;					yy = _puntoDeOrigen.y + Math.sin(angle) * _radio;					this.graphics.lineTo(xx, yy);				}				this.graphics.lineTo(startPoint.x, startPoint.y);					}				public function get puntoDeOrigen():Point		{			return _puntoDeOrigen;		}		public function set puntoDeOrigen(v_punto_origen:Point):void		{			_puntoDeOrigen = v_punto_origen;			init();		}		public function get grosorDeArco():Number		{			return _grosorDeArco;		}		public function set grosorDeArco(v_grosor_arco:Number):void		{			_grosorDeArco = v_grosor_arco;			init();		}		public function get radio():Number		{			return _radio;		}		public function set radio(v_radio:Number):void		{			_radio = v_radio;			init();		}		public function get gradosDeInicio():Number		{			return _gradosDeInicio;		}		public function set gradosDeInicio(v_grados_inicio:Number):void		{			_gradosDeInicio = v_grados_inicio;			init();		}		public function get amplitudDeArco():Number		{			return _amplitudDeArco;		}		public function set amplitudDeArco(v_amplitud_arco:Number):void		{			_amplitudDeArco = v_amplitud_arco;			init();		}		public function get color():uint
		{
			return _color;
		}		public function set color(value:uint):void
		{
			_color = value;			init();
		}	}	}