package  com.graphics{			import com.graphics.implementations.FiguraPolar;	import com.graphics.implementations.IFiguraPolar;	import com.maths.OPGeometrica;	import com.maths.OPTrigonometrica;		import flash.display.Sprite;	import flash.geom.Point;
		public class Estrella extends FiguraPolar implements IFiguraPolar{		private var _largo_picos:Number;		private var _color:uint;				public function Estrella(radio:Number = 100, divisiones:Number = 5, largo_picos:Number = 50, color:uint = 0xFFFFFF ):void{			super(radio, divisiones);			_color = color;			_largo_picos = largo_picos;						init();					}		override public function init():void{			var puntoInternoDeTraslado:Point = new Point();			var puntoExternoDeTraslado:Point = new Point();			this.graphics.clear();			this.graphics.beginFill(_color,1);			for(var i:int = 0;i<=divisiones;i++){				puntoInternoDeTraslado = Point.polar(radio,(radianesPorSegmento * (i+1)) - radianesPorSegmento/2);				puntoExternoDeTraslado = Point.polar(radio-_largo_picos,radianesPorSegmento * i);				this.graphics.lineTo(puntoExternoDeTraslado.x + radio, puntoExternoDeTraslado.y + radio);				this.graphics.lineTo(puntoInternoDeTraslado.x + radio, puntoInternoDeTraslado.y + radio);			}//for			this.graphics.lineTo(puntoExternoDeTraslado.x + radio,puntoExternoDeTraslado.y + radio);			this.graphics.endFill();		}//init				//SETTERS & GETTERS				public function set largo_picos(v_largo_picos:Number):void{			_largo_picos = v_largo_picos;			init();		}		public function get largo_picos():Number{			return _largo_picos;		}		public function set color_relleno(v_color_relleno:uint):void{			_color = v_color_relleno;			init();		}		public function get color_relleno():uint{			return _color;		}	}//class}//package