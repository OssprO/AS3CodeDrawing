package com.graphics{		import flash.display.Sprite;		import com.graphics.Aspa;

	public class CruzAspas extends Sprite{				private var _lado:Number;		private var _color:uint;				public function CruzAspas(lado:Number = 50, color:uint = 0xFFFFFF):void {			_lado = lado;			_color = color;			init();		}		public function init():void{			this.graphics.clear();			for(var j:int = 0;j < this.numChildren;j++){				this.removeChildAt(0);			}			var aspa:Aspa;			for(var i:int = 0;i <= 3;i++){				aspa = new Aspa(_color);				aspa.rotation = 90*i-45;				this.addChild(aspa);				this.width = _lado;				this.height = _lado;			}		}		public function set lado(v_lado:Number):void{			_lado = v_lado;			init();		}		public function get lado():Number{			return _lado;		}		public function set color(v_color:uint):void{			_color = v_color;			init();		}		public function get color():uint{			return _color;		}	}	}